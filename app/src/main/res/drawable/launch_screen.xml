<?xml version="1.0" encoding="utf-8"?>

<!-- The android:opacity=”opaque” line — this is critical in preventing a flash of black as your theme transitions. -->
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <!-- The background color -->
    <item android:drawable="@color/colorPrimary"/>

    <!-- Your splash image - 144dp color version of your app icon -->
    <item
        android:height="166dp"
        android:width="166dp"
        android:drawable="@drawable/shape_circle"
        android:gravity="center"/>
    <item
        android:height="144dp"
        android:width="144dp"
        android:drawable="@drawable/ic_accessibility_white_144dp"
        android:gravity="center" />

    <!--TODO Fix stretching issue - myabe it needs bitmap-->

</layer-list>